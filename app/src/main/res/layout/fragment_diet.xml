<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dietInterface"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="0.5"
        android:background="@drawable/layout_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView

            android:id="@+id/textView3"
            android:layout_width="90dp"
            android:layout_height="61dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:fontFamily="@font/lobster"
            android:orientation="horizontal"
            android:text="Diet"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.052" />

        <TextView
            android:id="@+id/reqCaloriesInterface"
            android:layout_width="263dp"
            android:layout_height="106dp"
            android:background="@drawable/green_rounded_corner"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.122" />

        <TextView
            android:id="@+id/reqProtienInterface"
            android:layout_width="169dp"
            android:layout_height="94dp"
            android:background="@drawable/green_rounded_corner"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reqCaloriesInterface" />

        <TextView
            android:id="@+id/reqCarbInterface"
            android:layout_width="171dp"
            android:layout_height="94dp"
            android:background="@drawable/green_rounded_corner"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.698"
            app:layout_constraintStart_toEndOf="@+id/reqProtienInterface"
            app:layout_constraintTop_toBottomOf="@+id/reqCaloriesInterface" />

        <TextView
            android:id="@+id/rqIntakeheading"
            android:layout_width="192dp"
            android:layout_height="19dp"
            android:text="Required Calorie Intake"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/reqCaloriesInterface"
            app:layout_constraintEnd_toEndOf="@+id/reqCaloriesInterface"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/reqCaloriesInterface"
            app:layout_constraintTop_toTopOf="@+id/reqCaloriesInterface"
            app:layout_constraintVertical_bias="0.08" />

        <TextView
            android:id="@+id/proteinheading"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="Protein"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/reqProtienInterface"
            app:layout_constraintEnd_toEndOf="@+id/reqProtienInterface"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="@+id/reqProtienInterface"
            app:layout_constraintTop_toTopOf="@+id/reqProtienInterface"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/carbheading2"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="Carb"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/reqCarbInterface"
            app:layout_constraintEnd_toEndOf="@+id/reqCarbInterface"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/reqCarbInterface"
            app:layout_constraintTop_toTopOf="@+id/reqCarbInterface"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/rqCalIntake"
            android:layout_width="134dp"
            android:layout_height="71dp"
            android:text="999**"
            android:textColor="#ffffff"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="@+id/reqCaloriesInterface"
            app:layout_constraintEnd_toEndOf="@+id/reqCaloriesInterface"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/reqCaloriesInterface"
            app:layout_constraintTop_toBottomOf="@+id/rqIntakeheading"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/rqProteinIntake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="9*"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/reqProtienInterface"
            app:layout_constraintEnd_toEndOf="@+id/reqProtienInterface"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/reqProtienInterface"
            app:layout_constraintTop_toBottomOf="@+id/proteinheading" />

        <TextView
            android:id="@+id/rqCarbIntake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9*"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/reqCarbInterface"
            app:layout_constraintEnd_toEndOf="@+id/reqCarbInterface"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="@+id/reqCarbInterface"
            app:layout_constraintTop_toBottomOf="@+id/carbheading2"
            app:layout_constraintVertical_bias="0.259" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_weight="1"
        android:background="@drawable/layout_blueish_grey">

        <TextView

            android:id="@+id/mealPlanHeading"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:text="Meal Plans"
            android:textColor="#3C3C3E"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066" />

        <Button
            android:id="@+id/breakFastbtn"
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="160dp"
            android:drawableLeft="@drawable/breakfastbtnico"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:text="Breakfast"
            android:textColor="#000000"
            app:backgroundTint="#ABC3D5"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mealPlanHeading"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/snackbtn"
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="28dp"
            android:drawableLeft="@drawable/snackbtnico"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:text="Snack"
            android:textColor="#000000"
            app:backgroundTint="#ABC3D5"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/breakFastbtn"
            app:layout_constraintVertical_bias="0.109" />

        <Button
            android:id="@+id/dinnerbtn"
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@drawable/dinnerbtnico"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:text="dinner"
            android:textColor="#000000"
            app:backgroundTint="#ABC3D5"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toEndOf="@+id/snackbtn"
            app:layout_constraintTop_toBottomOf="@+id/lunchbtn"
            app:layout_constraintVertical_bias="0.336" />

        <Button
            android:id="@+id/lunchbtn"
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:layout_marginBottom="160dp"
            android:drawableLeft="@drawable/lunchbtnico"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:text="Lunch"
            android:textColor="#000000"
            app:backgroundTint="#ABC3D5"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.623"
            app:layout_constraintStart_toEndOf="@+id/breakFastbtn"
            app:layout_constraintTop_toBottomOf="@+id/mealPlanHeading"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>